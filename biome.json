{
  "$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noInnerDeclarations": "off",
        "noUnnecessaryContinue": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noDoubleEquals": "off",
        "noConsoleLog": "warn",
        "noRedeclare": "off"
      },
      "style": {
        "useDefaultParameterLast": "off",
        "useConst": "warn",
        "useEnumInitializers": "off",
        "useTemplate": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "warn",
        "useLiteralKeys": "off",
        "useSimplifiedLogicExpression": "warn",
        "useOptionalChain": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useMediaCaption": "off",
        "noHeaderScope": "off",
        "useAltText": "warn",
        "useButtonType": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 90,
    "ignore": ["**/*/generated-new.ts", "**/*/generated-v2.ts"]
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "jsxQuoteStyle": "single",
      "semicolons": "always",
      "quoteStyle": "single"
    }
  }
}
